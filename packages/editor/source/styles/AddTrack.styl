@require './palette.styl'

.add-track
  position relative
  overflow hidden
  background-color $color-dark
  color $color-white


  input[type=file]
    position absolute
    top 0
    left 0
    display none
    opacity 0
    
  label
    position relative
    display flex
    border 0
    padding 10px
    height 100%
    background-color $color-main
    color $color-white
    align-items center
    transition all 0.2s ease

    &:hover
      cursor pointer
      transition all 0.2s ease
      filter: brightness(1.2)

    &:active
      filter: brightness(0.8)
      transition all 0.2s ease