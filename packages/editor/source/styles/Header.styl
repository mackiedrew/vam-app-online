@require './palette.styl'

.header

  .main-bar
    display flex
    flex-shrink 0
    align-items center
    background-color $color-main
    color white
    padding-left 10px

    .logo
      $logo-size = 25px
      width $logo-size
      height $logo-size
    
    h1
      flex-grow 1
      margin-left 10px
      margin-right 10px
      font-size 20px
      display inline-block
      text-align left

    button
      display flex
      align-items center
