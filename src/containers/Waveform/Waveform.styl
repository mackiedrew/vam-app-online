.waveform
  padding 10px 5px
  background-color rgba(200, 200, 200, 1.0)
  .grain
    display inline-block
    min-width 1%
    background-color white
    margin: 5px 0.5px
    height 40px
    transition transform 0.2s ease
    &:hover
      transition transform 0.2s ease
      transform scale(1.2)
      cursor pointer
