@require '../../palette.styl'


body
  margin 0
  padding 0
  color $color-text-1
  font-family 'Franklin Gothic Medium', 'Arial Narrow', 'Arial', 'sans-serif'

a
  text-decoration none
  color color-text-1

    
button
  color $color-white
  background-color $color-main
  border 0
  padding 10px
  transition all 0.2s ease

  &:hover
    transition all 0.2s ease
    filter: brightness(1.2)
    cursor pointer

  &:active
    filter: brightness(0.8)
    transition all 0.2s ease

audio
  display none

.app
  display flex
  width 100%
  height 100vh
  flex-direction column
  flex-wrap nowrap

  header
    display flex
    flex-shrink 0
    background-color $color-main
    color white

  main
    display flex
    flex-grow 1
    overflow: auto

    .filters
      display inline-block
      width 100px
      background-color $color-lite
      transition all 0.6s ease
      overflow hidden

    .tracks
      display inline-block
      flex-grow 1

  footer
    flex-shrink 0