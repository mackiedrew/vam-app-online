@require '../../palette.styl'


body
  margin 0
  padding 0
  color $color-text-1
  font-family 'Franklin Gothic Medium', 'Arial Narrow', 'Arial', 'sans-serif'

a
  text-decoration none
  color color-text-1

    
button
  color $color-white
  background-color $color-main
  border 0
  padding 10px
  transition all 0.2s ease

  &:hover
    transition all 0.2s ease
    filter: brightness(1.2)
    cursor pointer

  &:active
    filter: brightness(0.8)
    transition all 0.2s ease

.app
  display flex
  width 100%
  height 100vh
  flex-direction column
  flex-wrap nowrap

  header
    flex-shrink 0
    height 50px
    background-color $color-main
    color white

    h1
      font-size 20px
      display block
      width 100%
      text-align left

  main
    flex-grow 1
    overflow: auto

    .tracks
      width 100%

  footer
    flex-shrink 0