@require './palette.styl'

.settings-field
  margin 20px 0

  .entry-area
    display flex

    .input
      border 0
      border-bottom 1px solid grey
      background-color rgba(0, 0, 0, 0)
      height 30px
      flex-grow 1
      flex-shrink 1
      transition all 0.2s ease

    .unit
      display flex
      align-items center
      flex-grow 1
      flex-shrink 1
      font-size 20px
