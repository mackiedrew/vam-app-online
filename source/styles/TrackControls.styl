@require './palette.styl'


.track-controls
  display flex
  padding 0
  width 100%
  justify-content space-between
  align-items stretch
  background-color $color-dark
  color white

  button
    background-color mix($color-main, $color-dark)
  
  span.name
    display flex
    margin 0 15px
    align-items center
    overflow hidden
