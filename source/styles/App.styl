@require './palette.styl'


body
  margin 0
  padding 0
  min-width 300px
  color $color-text-1
  font-family 'Raleway', 'Franklin Gothic Medium', 'Arial Narrow', 'Arial', 'sans-serif'

a
  text-decoration none
  color color-text-1

    
button
  color $color-white
  background-color $color-main
  border 0
  padding 10px
  transition filter 0.2s ease

  &:hover
    cursor pointer
    transition filter 0.2s ease
    filter brightness(1.2)
    
  &:active
    filter brightness(0.8)
    transition filter 0.2s ease

audio
  display block
  width 500px
  height 100px

.app
  display flex
  width 100%
  height 100vh
  flex-direction column
  flex-wrap nowrap

  main
    display flex
    flex-grow 1
    overflow auto

  footer
    flex-shrink 0
