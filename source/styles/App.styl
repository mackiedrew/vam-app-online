@require './palette.styl'


body
  margin 0
  padding 0
  min-width 300px
  color $color-text-1
  font-family 'Raleway', 'Franklin Gothic Medium', 'Arial Narrow', 'Arial', 'sans-serif'

a
  text-decoration none
  color color-text-1

button
  transition filter 0.2s ease
  border 0
  padding 10px
  background-color $color-main
  color $color-white

  &:hover
    transition filter 0.2s ease
    cursor pointer
    filter brightness(1.2)
    
  &:active
    transition filter 0.2s ease
    filter brightness(0.8)

audio
  display block
  width 500px
  height 100px

.app
  display flex
  width 100%
  height 100vh
  flex-direction column
  flex-wrap nowrap

  main
    display flex
    flex-grow 1
    overflow auto
    flex-wrap nowrap

    .tracks-container
      flex-grow 1

  footer
    flex-shrink 0
