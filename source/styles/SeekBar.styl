@require './palette.styl'

.seek-bar
  display flex
  justify-content space-between
  background-color $color-main
  align-items stretch
  
  .view-controls
    display flex

    div
      display flex
      align-items center
      padding 14px 15px
      color $color-white
      background-color $color-dark
      font-family Courier, monospace

  .seek-controls
    display flex
    
    button
      display inline-block
