@require './palette.styl'

.settings
  display inline-block
  background-color $color-lite
  transition all 0.4s ease
  overflow-x hidden
  overflow-y auto
  opacity 1
  flex-grow 0
  flex-shrink 0
  flex-basis 250px

  fieldset
    display flex
    flex-wrap wrap
    flex-grow 1
    border 0

  &.closed
    display inline-block
    flex-basis 0
    opacity 0