@require './palette.styl'

$main-color = rgba(255, 255, 255, 0.8)
$back-color = darken($color-dark, 5)

.time-bar
  display flex
  width 100%
  height 18px
  align-items center
  background-color $back-color
  color $main-color

  .slice, .slice > *
    font-family Courier, monospace
    flex-grow 1
    border-left 1px solid $main-color
    font-size 10px
    
    padding 4px
    overflow hidden
